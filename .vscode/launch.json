    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/venv/bin/uvicorn", // Path to uvicorn in venv
            "args": [
                "main:app", // Replace with your app module and app object
                "--host",
                "127.0.0.1",
                "--port",
                "7001",
                "--reload"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend", // Optional: Set your working directory
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}